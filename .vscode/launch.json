    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/new_backend/",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "arxivsearch.main:app",
                "--port=8888",
                "--reload"
            ],
            "jinja": true,
        }
    ]
}